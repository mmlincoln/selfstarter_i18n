<div class="gray_background" id='share_container'>
  <div class="wrapper center" id="congrats">
    <h2>
      <%= t('preorder.share.congrats') %> <%= t('preorder.share.product_description') %>
    </h2>
    <p><%= t('preorder.share.congrats_2') %> <span id="backer_number"><%= number_with_delimiter Order.backers, :delimiter => "," %></span>.<%= t('preorder.share.congrats_3') %>  <%= t('preorder.share.product_name') %>!</p>
    <br />
    <br />
    <div id="share" class="clearfix">
      <div id='pin_button_container'>
        <%= pin_it_button %>
      </div>
      <div id='tweet_button_container'>
        <%= tweet_button %>
      </div>
      <div id='facebook_button_container'>
        <%= like_button(450, true) %>
      </div>
    </div>
     <div id="order_id"><%= t('preorder.share.reservation_id') %> <%= @order.uuid %>. <%= t('preorder.share.reservation_id_2') %></div>
  </div>
</div>

<%= render 'preorder/share/twitter_js' %>
<%= render 'preorder/share/facebook_js' %>
